package processManaging;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.PrintWriter;
import java.net.ServerSocket;
import java.net.Socket;

public class Master {

	Thread listen;
	Thread heartbeat;
	Socket listenSocket;
	BufferedReader in;
	
	public Master(final int hostPortnum) {
		listen = new Thread("MasterListen") {
			public void run() {
				try {
					listenSocket = new ServerSocket(hostPortnum);
				} catch (IOException e) {
					System.out.println("Couldn't listen on: " + hostPortnum);
					e.printStackTrace();
				}
			}
		};
		
		heartbeat = new Thread("MasterHeartbeater") {
		
		};
		
		in = null;
		
	}

	public void startUp() {
		listen.run();
	}
	
	public void go(){
		//listenSocket.accept();
		try {
			in = new BufferedReader(new InputStreamReader(listenSocket.getInputStream()));
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
}
