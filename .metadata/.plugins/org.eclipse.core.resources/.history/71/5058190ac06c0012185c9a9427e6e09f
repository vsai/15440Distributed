package Transactional_IO;

import java.io.FileOutputStream;
import java.io.IOException;
import java.io.OutputStream;

public class TransactionalFileOutputStream extends java.io.OutputStream implements java.io.Serializable {


	private static final long serialVersionUID = 6522677712988099866L;
	private String myFile;
	private int seekLocation;
	private boolean myOverride;
	
	public TransactionalFileOutputStream(String file,boolean override){
		myFile=file;
		seekLocation=0;
		myOverride=override;
		
	}
	@Override
	public void write(int arg0) throws IOException {
		OutputStream output = new FileOutputStream(myFile,myOverride);
		output.write(arg0);
		output.close();
		
	}
	
	
}
